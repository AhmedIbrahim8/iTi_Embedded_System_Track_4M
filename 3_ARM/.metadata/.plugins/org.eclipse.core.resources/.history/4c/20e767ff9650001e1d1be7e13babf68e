/********************************************************************************************/
/************************************** APIs Definition *************************************/
/********************************************************************************************/
void MNVIC_VoidEnbleInterrupt(u8 Copy_u8IntPos)
{
	SET_BIT(NVIC->ISER[Copy_u8IntPos/32],Copy_u8IntPos%32);
}

void MNVIC_VoidDisableInterrupt(u8 Copy_u8IntPos)
{
	SET_BIT(NVIC->ICER[Copy_u8IntPos/32],Copy_u8IntPos%32);
}

void MNVIC_VoidEnableInterruptPending(u8 Copy_u8IntPos)
{
	SET_BIT(NVIC->ISPR[Copy_u8IntPos/32],Copy_u8IntPos%32);
}

void MNVIC_VoidDisableInterruptPending(u8 Copy_u8IntPos)
{
	SET_BIT(NVIC->ICPR[Copy_u8IntPos/32],Copy_u8IntPos%32);
}

void MNVIC_VoidIsInterruptActive(u8 Copy_u8IntPos,u8 *Copy_Read)
{
	*Copy_Read = GET_BIT(NVIC->IAPR[Copy_u8IntPos/32],Copy_u8IntPos%32);
}

void MNVIC_VoidSetInterruptGroupMode(MNVIC_Group_t Group_Priority)
{

}
