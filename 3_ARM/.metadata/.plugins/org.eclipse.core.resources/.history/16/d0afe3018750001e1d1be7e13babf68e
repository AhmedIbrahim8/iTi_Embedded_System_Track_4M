#ifndef MNVIC_PRIVATE_H_
#define MNVIC_PRIVATE_H_
/**************************************************************************/
/* RCC Module Base Address From Programming Manual page 38                  */
/* RCC is connected to AHB1 Bus                                           */
/* Start from    address                 0xE000 E100                      */
/*                                       -----------                      */
/* End   at      address                 0xE000 E4EF                      */
/**************************************************************************/
#define   NVIC_BASE_ADDRESS       (0xE000E100)

/**************************************************************************/
/* Typedef for all RCC Module Register                                    */
/* Reference Manual Page 137 6.3.22 RCC register map                      */
/**************************************************************************/
typedef struct{
	u32 NVIC_ISER[8];
	u32 RESERVED1[24];
	u32 NVIC_ICER[8];
	u32 RESERVED2[24];
	u32 NVIC_ISPR[8];
	u32 RESERVED3[24];
	u32 NVIC_IABR[8];
	u32 RESERVED4[113];
	u8  NVIC_IPR[240];
	u32 RESERVED5[1161];
	u32 NVIC_STIR;

}NVIC_t;


/* Macro to point to the base address of the RCC Module */
#define       NVIC          ((volatile NVIC_t*)NVIC_BASE_ADDRESS)





#endif /* MNVIC_PRIVATE_H_ */
